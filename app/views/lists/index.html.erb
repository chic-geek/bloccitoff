<div class="row">
  <div class="col-md-8">
    <h1>Your lists:</h1>
    <div class="list-group">
      <% @lists.each do |list| %>
        <div class="list-group-item">
          <%= link_to list.title, list %>
          <div class="pull-right">
            <%= link_to "Edit", edit_list_path(list) %> |
            <%= link_to "Delete", list, :confirm => "Are you sure?", :method => :delete %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="well">
      <%= link_to "Create new list", new_list_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
