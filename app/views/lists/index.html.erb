<div class="row">
  <div class="col-md-8">
    <h1>My lists:</h1>
    <div class="list-group">
      <% @lists.each do |list| %>
        <div class="list-group-item">
          <%= link_to list.title, list %>
          <div class="pull-right">
            <%= link_to "", edit_list_path(list), class: 'glyphicon glyphicon-pencil text-muted'%>&nbsp;
            <%= link_to "", list, :method => :delete, class: 'glyphicon glyphicon-trash text-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="well">
      <%= link_to "Create new list", new_list_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
